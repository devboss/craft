{% import "_macros.twig" as macros %}

{% extends "_blueprint-layout" %}

{% block blueprint_content %}
	<div class="blueprint__container">
		{{ macros.worksheet }}

		<div class="background-sketch--history-tools show-for-large"></div>

		<div class="background-sketch--history-shoes"></div>

		{{ macros.title( 'History' ) }}

		<div class="row margin-bottom-medium large-margin-bottom-large">
			<div class="column small-12 large-5 offset-large-4">
				<h2 class="background-text--history-it-began">It all began in 2006</h2>
			</div>
		</div>

		<div class="row large-margin-bottom-large">
			<div class="column small-12 large-6 margin-bottom-medium large-margin-bottom-none">
				<figure>
					<img src="/images/static/history-battle-boys-1144w.png">
					<figcaption class="-large rotate-ccw-3 transform-origin-bottom-left text-right margin-none">The Battle Boys who inspired Lapland<sup>UK</sup></figcaption>
				</figure>
			</div>

			<div class="column small-12 large-6">
				<div class="blueprint__text-section -padding-left-medium -padding-right-medium">
                    {% set block0 = entry.historyContent.type('paragraph').nth(0) %}
                    {% if block0 %}
                        {{ block0.text }}
                    {% endif %}
				</div>
				<div class="blueprint__text-section">
                    {% set block1 = entry.historyContent.type('paragraph').nth(1) %}
                    {% if block1 %}
                        {{ block1.text }}
                    {% endif %}
				</div>
				<div class="blueprint__text-section -padding-left-large -padding-right-small">
                    {% set block2 = entry.historyContent.type('paragraph').nth(2) %}
                    {% if block2 %}
                        {{ block2.text }}
                    {% endif %}
				</div>
			</div>
		</div>

		<div class="row">
			<div class="column small-12 large-5 large-order-1 margin-bottom-medium large-margin-bottom-none">
				<img src="/images/static/history-2007-980w.png">
			</div>

			<div class="column small-12 large-5 offset-large-1">
				<div class="blueprint__text-section">
                    {% set block3 = entry.historyContent.type('paragraph').nth(3) %}
                    {% if block3 %}
                        {{ block3.text }}
						<span class="history-christmas-magic-text">{{ block3.caption }}</span>
                    {% endif %}
				</div>
			</div>
		</div>

		<div class="row collapse large-uncollapse">
			<div class="column small-12 large-8">
				<h2 class="background-text--history-family">The Battle Family back in 2008</h2>
			</div>
		</div>

		<div class="row collapse large-margin-bottom-large">
			<div class="column small-12 large-7">
				<div class="row collapse uncollapse-large">
					<figure class="column small-12 large-10 offset-large-2 margin-bottom-medium">
						<img src="/images/static/history-brass-band-1002w.png">
						<figcaption class="rotate-cw-5 transform-origin-top-right text-center margin-top-small margin-bottom-none">We don't have a brass section any more!</figcaption>
					</figure>

					<figure class="column small-12 large-10">
						<img src="/images/static/history-beckham-989w.png">
						<figcaption class="padding-horizontal-medium large-padding-horizontal-none large-column-child-expander--double large-margin-left-small-negative">Mike & Alison with their boys who all still work at the Ascot experience. PS David Beckham is not one of Mike & Alison’s boys.</figcaption>
					</figure>
				</div>
			</div>
			<div class="column small-12 large-5 large-padding-horizontal-small">
				<figure>
					<figcaption class="rotate-cw-8 transform-origin-top-left text-right margin-bottom-medium margin-top-none">Our old passports</figcaption>
					<img src="/images/static/history-elf-passports-895w.png">
				</figure>
			</div>
		</div>

		<div class="row collapse margin-bottom-large large-margin-bottom-none">
			<div class="column small-8 large-3">
				<div class="background-text--history-2017">And in 2017</div>
			</div>
			<div class="column small-4 large-2 offset-large-1 flex-row -align-items-end">
				<img src="/images/static/history-10-years-373w.png">
			</div>
			<div class="column small-12 large-6 show-for-large">
				<div class="background-sketch--history-sage"></div>
			</div>
		</div>
		<div class="row rotate-cw-3 collapse large-uncollapse">
			<div class="column small-12 large-8 offset-large-4">
				<h2 class="blueprint-text-callout padding-left-medium large-padding-left-none">Lapland<sup>UK</sup> celebrates its <span class="blueprint-text-callout__large">10th Birthday</span> and we hope you’ll join us for the celebrations</h2>
			</div>
		</div>

		<div class="row margin-bottom-large">
			<div class="column small-12 large-6 flex-center-vertical">
				<div class="blueprint__text-section -padding-left-small -padding-right-xsmall fit-width">
                    {% set block4 = entry.historyContent.type('paragraph').nth(4) %}
                    {% if block4 %}
                        {{ block4.text }}
						<span class="history-signature-text rotate-ccw-5 transform-origin-bottom-left block">{{ block4.caption }}</span>
                    {% endif %}
				</div>
			</div>
			<div class="column small-12 large-6">
				<figure>
					<img class="column-child-expander--double large-column-child-collapse" src="/images/static/history-here-to-help-1057w.png">
					<figcaption class="large-padding-horizontal-xlarge">We are here to help you have a Magical Christmas with your small folk!</figcaption>
				</figure>
			</div>
		</div>

		<div class="row margin-bottom-medium large-margin-bottom-large">
			<div class="column small-12">
				<h3 class="history-untold-story__text rotate-ccw-3 transform-origin-bottom-left margin-bottom-medium-negative large-margin-bottom-xlarge-negative">Lapland: The Untold Story of Father Christmas</h3>
				<img class="history-untold-story__image large-padding-horizontal-large" src="/images/static/history-untold-story-1894w.png">
			</div>
		</div>

		<div class="row collapse large-uncollapse margin-bottom-small large-margin-bottom-xxlarge">
			<div class="column small-12 large-5 show-for-large">
				<div class="background-sketch--history-eeko"></div>
			</div>
			<div class="column small-12 large-7">
				<div class="background-text--history-see-you">After 10 magical years, we are truly honoured to help your family have the most wonder-filled Christmas possible. See you in 2017! The Lapland<sup>UK</sup> team</div>
			</div>
		</div>

		{{ macros.sign_off_box( 'Wish', 'Collector of wishes' ) }}
	</div>
{% endblock %}
